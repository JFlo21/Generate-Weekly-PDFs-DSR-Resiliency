# Enhanced Sentry Error Monitoring Configuration for Generate Weekly PDFs System
# =============================================================================

# Email Template Generation
# Set to "true" to save detailed error email templates to the generated_docs folder
SAVE_ERROR_EMAIL_TEMPLATES=true

# Email Recipients for Critical Errors
# Comma-separated list of email addresses to notify for critical errors
CRITICAL_ERROR_EMAIL_RECIPIENTS=admin@linetecservices.com,it@linetecservices.com

# Error Severity Email Thresholds
# Configure which error types trigger email notifications
EMAIL_ON_CRITICAL_ERRORS=true
EMAIL_ON_GROUPING_FAILURES=true
EMAIL_ON_SHEET_PROCESSING_FAILURES=false
EMAIL_ON_BASE_SHEET_FAILURES=true

# SMTP Configuration (for automated email sending)
# Uncomment and configure these if you want to send emails automatically
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@company.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Sentry Enhancement Settings
SENTRY_INCLUDE_EMAIL_TEMPLATES=true
SENTRY_ENHANCED_CONTEXT=true

# System Information for Email Templates
COMPANY_NAME=Linetec Services
SYSTEM_NAME=Weekly Excel Generation System
ADMIN_EMAIL=admin@linetecservices.com
SUPPORT_CONTACT=support@linetecservices.com

# Template Customization
EMAIL_TEMPLATE_LOGO_URL=https://your-company.com/logo.png
EMAIL_TEMPLATE_BRAND_COLOR=#C00000
